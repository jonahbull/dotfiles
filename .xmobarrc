Config 
{
    font = "xft:Consolas:pixelsize=12",
    bgColor = "#1c1c1c",
    fgColor = "#8d8d8d",
    position = Top,
    lowerOnStart = True,
    commands = [ 
                Run StdinReader
                , Run Network "wlan0" [] 10
                , Run MultiCpu [] 10
                , Run Weather "KBFI" ["-t","<tempF>°F"] 3600
                , Run Date "%a, %d %b %H:%M" "date" 10 
                , Run Battery [] 10
                ],
    sepChar = "%",
    alignSep = "}{",
    template = " %StdinReader% }{ %battery% · %multicpu% · %wlan0% · %KBFI% · %date% "
}
