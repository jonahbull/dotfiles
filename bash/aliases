# cat for images
alias icat='kitty +kitten icat'

# kubectl aliases
alias k='kubectl'
alias kga='kubectl get all'
alias kgp='kubectl get pods'
alias kgns='kubectl get ns'
alias kdp='kubectl describe pod'
alias kdelp='kubectl delete pod'
alias ktail='kubectl logs --tail=10 --follow'

# ls aliases
alias ll='ls -lh'
alias la='ls -a'

# replace cat with bat
alias cat='bat'

# color grep
#export GREP_COLOR=mt-32
export GREP_COLORS='mt=32'
alias grep='grep --color'
alias egrep='egrep --color'

# aliases for standard git commands
alias gco='git checkout'
alias gds='git diff --staged'
alias gl="git log --pretty=format:'%h %ad | %s%d [%an]' --stat --date=short -E"
alias gpff='git pull --ff-only'
alias gs='git status'

# show only my commits
alias my="git log --pretty=format:'%h %ad | %s%d [%an]' --stat --date=short -E --committer='Jonah Bull'"
