#ls aliases
alias ll='ls -lh'
alias la='ls -a'

# replace cat with bat
alias cat='bat'

# color grep
export GREP_COLOR=32
alias grep='grep --color'
alias egrep='egrep --color'

#aliases for standard git commands
alias gl="git log --pretty=format:'%h %ad | %s%d [%an]' --stat --date=short -E"
alias gs='git status'
alias gds='git diff --staged'
alias gpff='git pull --ff-only'
alias gco='git checkout'
